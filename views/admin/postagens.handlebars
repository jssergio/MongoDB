<h2>Lista Postagens</h2>
<hr>
<a href="/postagens/add"><button class="btn btn-outline-success" type="submit">Add Postagem</button></a>  

{{#each postagens}}

 <div class="card mt-4">
     <div class="card-body">
         <h4>Titulo: {{titulo}}</h4>
         <h4>{{descricao}}</h4>
         <h4>{{conteudo}}</h4>
         <h4>{{categoria.nome}}</h4>
         <h4>{{date}}</h4>
         <a href="/postagens/edit/{{id}}"><button class="btn btn-success">Editar</button></a> 
         <form action="/postagens/deletar" method="POST">
         <input type="hidden" name="id" id="id" value="{{id}}">    
<button class="btn btn-danger mt-2" type="submit">Excluir</button>
         </form>
         </div>
         </div>

 {{else}}
 <h4 class="mt-4">Nenhum POSTAGEM Cadastrado!!!! </h4>

{{/each}}