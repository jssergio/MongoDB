<h2>Lista Categorias</h2>
<hr>
<a href="/categorias/add"><button class="btn btn-outline-success" type="submit">Add Categorias</button></a>
{{#each cadastros}}

 <div class="card mt-4">
     <div class="card-body">
         <h4>{{nome}}</h4>
         <h4>{{cpf}}</h4>
         <h4>{{date}}</h4>
         <h4>{{arquivo}}</4>
         <a href="/categorias/edit/{{id}}"><button class="btn btn-success">Editar</button></a> 
         <form action="/categorias/deletar" method="POST">
         <input type="hidden" name="id" id="id" value="{{id}}">    
<button class="btn btn-danger mt-2" type="submit">Excluir</button>
         </form>
         </div>
         </div>

 {{else}}
 <h4 class="mt-4">Nenhum Usuario Cadastrado!!!! </h4>

{{/each}}